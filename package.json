{
  "name": "boxcrate",
  "version": "2.0.0",
  "description": "A smart wrapper for the browser's localStorage that allows you to set and get items as they are with optional expiration times.",
  "main": "boxcrate.js",
  "module": "boxcrate.js",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "rollup": "^1.16.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-node-resolve": "^5.1.0",
    "sinon": "^7.3.2",
    "typescript": "^3.5.2"
  },
  "types": "lib/index.d.ts",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "rollup -c",
    "bundle:watch": "rollup -c --watch",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertcorponoi/boxcrate"
  },
  "keywords": [
    "localStorage",
    "storage",
    "save",
    "store"
  ],
  "author": "Robert Corponoi",
  "license": "MIT"
}
